{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lavender",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#literals" },
		{ "include": "#keywords" },
		{ "include": "#types" },
		{ "include": "#constants" },
		{ "include": "#functions" },
		{ "include": "#variables" },
		{ "include": "#operators" },
		{ "include": "#punctuation" }
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.lavender",
				"match": "//.*$"
			}, {
				"name": "comment.block.lavender",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		},
		"literals": {
			"patterns": [{
				"name": "constant.numeric.lavender",
				"match": "\\b(0x[0-9a-fA-F_]+|0b[01_]+|0o[0-7_]+|[0-9_]+(\\.[0-9_]+)?([eE][+-]?[0-9_]+)?)\\b"
			}, {
				"name": "constant.character.lavender",
				"match": "'.'"
			}, {
				"name": "string.quoted.double.lavender",
				"begin": "\"",
				"end": "\"",
				"patterns": [{
					"name": "constant.character.escape.lavender",
					"match": "\\\\."
				}]
			}, {
				"name": "string.quoted.single.lavender",
				"begin": "'",
				"end": "'",
				"patterns": [{
					"name": "constant.character.escape.lavender",
					"match": "\\\\."
				}]
			}, {
				"name": "entity.name.class.lavender",
				"match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.other.lavender",
				"match": "\\b(fun|object)\\b"
			}, {
				"name": "keyword.control.lavender",
				"match": "\\b(return|switch|case|default)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.type.lavender",
				"match": "\\b(str|int)\\b"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.lavender",
				"match": "\\b(true|false|null)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
				"captures": {
					"1": { "name": "entity.name.function.lavender" }
				}
			}, {
				"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(\\:)([ ]|.)",
				"captures": {
					"1": { "name": "variable.name.lavender" },
					"2": { "name": "keyword.operator.lavender" }
				}
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.other.lavender",
				"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.lavender",
				"match": "\\+|\\-|\\*|\\/|\\%|\\&|\\||\\^|\\~|\\!|\\=|\\<|\\>|\\?|\\:|\\,|\\;|\\."
			}]
		},
		"punctuation": {
			"patterns": [{
				"name": "keyword.operator.lavender",
				"match": "\\(|\\)|\\[|\\]|\\{|\\}|\\.|\\,|\\;"
			}]
		}
	},
	"scopeName": "source.lavender"
}